<div>
  <div class="banner-image">
    <div class="bottom-center">
      <span class="header-subtitle">
      </span>
    </div>
  </div>

  <div class="spanImage">
    <div class="imageText">
      <h1>Boston Top Spots</h1>
      <h4>Find Local Attractions, Book Tours, Experience Boston</h4>
    </div>
    <%= image_tag "BostonImage.jpg", :class => "imageToSpan" %>
  </div>
  <!-- <div class="attraction-link">
  </div> -->

  <ul class="attractions-container">
  <% if @attractions %>
    <% @attractions.each do |attraction| %>
      <li class="attraction-tile-li">
        <div class="attraction-tile-image" >
        <img src="<%= attraction.image_url %>" />
        <div class="attraction-text">
        <%= link_to attraction.name, attraction_path(attraction) %>
        </div>
      </div>
      </li>
    <% end %>
  <% end %>
  </ul>


</div>
