<div class="attraction-form">
  <h2>Submit a New Attraction Here</h2>
  <%= form_for(@attraction) do |f| %>

      <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>

    <div class="field">
      <%= f.label :address %>
      <%= f.text_field :address %>
    </div>

    <div class="field small-form">
      <%= f.label :city %>
      <%= f.text_field :city %>
    </div>

    <div class="field small-form">
      <%= f.label :state %>
      <%= f.text_field :state %>
    </div>

    <div class="field small-form">
      <%= f.label :zip %>
      <%= f.text_field :zip %>
    </div>

    <div class="field">
      <%= f.label :image_url%>
      <%= f.text_field :image_url %>
    </div>

    <div class="actions">
      <%= f.button "Add Your Attraction", :class => "submit-button"%>
    </div>
  <% end %>
</div>
